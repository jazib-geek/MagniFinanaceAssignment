@model List<Data.ViewModels.TeacherViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Teacher List</h2>

<p>
    <a href="/Teacher/Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-bordered">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>DOB</th>
        <th>Salary</th>
        <th>IsActive</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>
                @{ string DOB = item.DateOfBirth != null ? item.DateOfBirth.Value.ToShortDateString() : string.Empty; }
                @DOB
            </td>
            <td>@item.Salary</td>
            @if (item.IsActive == true)
            {
                <td> <i class="glyphicon glyphicon-check text-success"></i> Active </td>
            }
            else
            {
                <td> <i class="glyphicon glyphicon-exclamation-sign text-danger"></i> Deactivated</td>
            }

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
